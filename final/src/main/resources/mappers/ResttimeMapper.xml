<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.domain.resttime.ResttimeMapper">

  <!-- tb_user 테이블 전체 컬럼 -->
    <sql id="registerColumns">
         user_id
        , user_pw
        , user_name
        , user_mbti
        , user_email
        , user_auth
        , append_date
        , update_date
    </sql>

	<!-- mbti_resttime 테이블 전체 컬럼 -->
	<sql id="restmethodColumn">
        MBTI,
        method
    </sql>

	<!-- MBTI 휴식방법 조회 -->
    <select id="userMbti" parameterType="String" resultType="com.study.domain.resttime.ResttimeResponse">
        SELECT
            method
        FROM
            mbti_resttime
        WHERE
            MBTI=#{value}
    </select>
    
</mapper>